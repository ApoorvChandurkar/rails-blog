<% if @article.errors.any? %>
  <h2> Following is the list of errors that occured </h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li> <%= msg %></li>

    <% end %>
  </ul>
<% else %>
  <% if @article.title.nil?%>
    <h1>Create Article</h1>
  <% else %>
    <h1>Edit article</h1>

  <% end %>
  
<% end %>


<%= form_with(model: @article, local: true) do |f| %>
    <p>
        <%= f.label :title %>
        <br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %>
        <br>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>

<% end %>