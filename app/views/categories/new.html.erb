<h1 class="text-center mt-4" >Create a new category</h1>



<div class="container">

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category%>
      <%= form_with(model: @category, class: "shadow p-3 mb-5 bg-info rounded" ,local: true) do |f| %>
            <div class="form-group row">
              <%= f.label :name, "Category name", class: "col-sm-2 col-form-label text-light"%>
              <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
              </div>
            </div>

            
            <div class="row justify-content-center">
              <%= f.submit class: "btn btn-outline-light btn-lg", id: "btn" %>
            </div>

      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and go back to index ]', articles_path%>
    </div>
  </div>
  
  
</div>

